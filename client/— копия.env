# Основные переменные окружения для разработки
NODE_ENV=development                # Режим окружения: development, production, test
CORS_ORIGIN=http://localhost:3000   # Источник для CORS (разрешённый домен клиента)

# Настройки логирования
REACT_APP_LOG_LEVEL=debug           # Уровень логирования: debug, info, warn, error, off
REACT_APP_LOG_TIME_FORMAT=iso       # Формат времени в логах: iso (ISO 8601), local (локальный), custom (пользовательский)

# Настройки WebSocket
REACT_APP_SOCKET_URL=ws://localhost:5000  # URL WebSocket-сервера (используем ws:// для WebSocket)
REACT_APP_SOCKET_RECONNECT_ATTEMPTS=10    # Количество попыток переподключения WebSocket
REACT_APP_SOCKET_RECONNECT_DELAY=1000     # Задержка между попытками переподключения (мс)
REACT_APP_SOCKET_TIMEOUT=20000            # Таймаут соединения WebSocket (мс)

# Дополнительные настройки приложения
REACT_APP_API_URL=http://localhost:5000/api  # Базовый URL для API-запросов
REACT_APP_MAX_UPLOAD_SIZE=10485760           # Максимальный размер загружаемого файла (10MB в байтах)
REACT_APP_DEFAULT_LANGUAGE=ru                # Язык по умолчанию для локализации
REACT_APP_ENABLE_ANALYTICS=true              # Включение аналитики (true/false)